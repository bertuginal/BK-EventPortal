                        <div class="speaker" data-aos="fade-up" data-aos-delay="100">
                            <a href="/festival/details/@item.Id"><img src="~/theevent/assets/img/activities/festival/@item.FestivalImage" alt="@item.FestivalType" class="img-fluid"></a>
                            <div class="details">
                                <h3><a href="/festival/details/@item.Id">@item.FestivalName</a></h3>

@model EventPortal.DAL.Models.Home

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- ======= Hero Section ======= -->
<section id="hero">
    <div class="hero-container" data-aos="zoom-in" data-aos-delay="100">
        <h1 class="mb-4 pb-0">Güncel Etkinlikler<br><span>Event Portal</span> İle Sizlerle</h1>
        <p class="mb-4 pb-0">Konserler, Festivaller, Tiyatrolar, Gösteriler ve Daha Fazlası...</p>
        <a href="https://www.youtube.com/watch?v=jDDaplaOz7Q" class="glightbox play-btn mb-4"></a>
        <a href="#speakers" class="about-btn scrollto">Tüm Etkinlikler ≫</a>
    </div>
</section><!-- End Hero Section -->

<main id="main">

    <!-- ======= About Section ======= -->
    <section id="about">
        <div class="container position-relative" data-aos="fade-up">
            <div class="row">
                <div class="col-lg-6">
                    <h2>About The Event</h2>
                    <p>
                        Sed nam ut dolor qui repellendus iusto odit. Possimus inventore eveniet accusamus error amet eius aut
                        accusantium et. Non odit consequatur repudiandae sequi ea odio molestiae. Enim possimus sunt inventore in
                        est ut optio sequi unde.
                    </p>
                </div>
                <div class="col-lg-3">
                    <h3>Where</h3>
                    <p>Downtown Conference Center, New York</p>
                </div>
                <div class="col-lg-3">
                    <h3>When</h3>
                    <p>Monday to Wednesday<br>10-12 December</p>
                </div>
            </div>
        </div>
    </section><!-- End About Section -->
       
    <!-- ======= Activities Section ======= -->
    <section id="speakers">
        <div class="container" data-aos="fade-up">
            <div class="section-header">
                <h2>KONSERLER</h2>
                <p>Hemen yerini ayırt!</p>
            </div>

            <div class="row">
                @foreach (var item in Model.ConcertList) 
                {
                <div class="col-lg-4 col-md-6">
                    <div class="speaker" data-aos="fade-up" data-aos-delay="100">
                            <a href="/concert/details/@item.Id"><img src="~/theevent/assets/img/activities/concert/@item.ConcertImage" alt="@item.ConcertType" class="img-fluid"></a>
                        <div class="details">
                                <h3><a href="/concert/details/@item.Id">@item.ConcertName</a></h3>
                                <div style="text-align : left; padding-left : 15px;">
                                    <p><i class="bi bi-music-note"></i> @item.ConcertType</p>
                                    <p><i class="bi bi-alarm-fill"></i> @item.ConcertTime</p>
                                    <p><i class="bi bi-pin-angle-fill"></i> @item.ConcertLocation</p>
                                    <p><i class="bi bi-file-text-fill"></i> @item.ConcertDescription</p>
                                </div>
                        </div>
                    </div>
                </div>
                }
                <a href="~/concert"><button type="button" class="btn btn-success btn-lg btn-block" style="padding : 5px 489px">KONSERLER ≫</button></a>
            </div>            
        </div>

        <br />
        <br />
        <br />

        <div class="container" data-aos="fade-up">
            <div class="section-header">
                <h2>FESTİVALLER</h2>
